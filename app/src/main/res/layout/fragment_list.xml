        android:text="@string/dodaj_zapis_text"
        android:id="@+id/addZapis"
        />


    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </android.support.v7.widget.RecyclerView>
